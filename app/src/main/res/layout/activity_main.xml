<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<ListView
			android:id="@+id/listView"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="0dp" android:layout_below="@+id/buttons">
	</ListView>
	<LinearLayout
			android:id="@+id/buttons"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<Button
				android:id="@+id/settings"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/settings" tools:ignore="ButtonStyle"/>
	<TextView
			android:id="@+id/time"
			android:textSize="10pt"
			android:textAlignment="gravity"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"/>
	</LinearLayout>
	<Button
			android:layout_width="25pt"
			android:layout_height="25pt"
			android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
			android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
			android:id="@+id/AddContact" android:background="@drawable/ic_add_circle_black_24dp"/>
</RelativeLayout>