<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12pt"
                    android:text="@string/themes"/>
            <Button android:id="@+id/AppTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apptheme"
                    android:onClick="changeTheme"
                    android:layout_marginHorizontal="20pt"/>
            <Button
                    android:id="@+id/OverlayThemeLime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overlaythemelime"
                    android:onClick="changeTheme"
                    android:layout_marginHorizontal="20pt"/>
            <Button
                    android:id="@+id/OverlayThemeRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overlaythemered"
                    android:onClick="changeTheme"
                    android:layout_marginHorizontal="20pt"/>
            <Button
                    android:id="@+id/OverlayThemeGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overlaythemegreen"
                    android:onClick="changeTheme"
                    android:layout_marginHorizontal="20pt"/>
            <Button
                    android:id="@+id/OverlayThemeBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overlaythemeblue"
                    android:onClick="changeTheme"
                    android:layout_marginHorizontal="20pt"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12pt"
                    android:text="@string/languages"/>
            <Button android:id="@+id/Russian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/russian"
                    android:onClick="ChangeLanguage"
                    android:layout_marginHorizontal="20pt"/>
            <Button android:id="@+id/English"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:onClick="ChangeLanguage"
                    android:layout_marginHorizontal="20pt"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>