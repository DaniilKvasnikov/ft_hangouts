<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
    <TextView
            android:id="@+id/text2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="Phone" android:layout_alignParentEnd="true" android:layout_marginEnd="203dp"
            android:layout_toEndOf="@+id/image" android:layout_marginStart="21dp" android:layout_marginTop="12dp"
            android:layout_below="@+id/text1"/>
    <TextView
            android:id="@+id/text1"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="Name" android:layout_marginEnd="203dp" android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/image" android:layout_marginStart="22dp"/>

</RelativeLayout>